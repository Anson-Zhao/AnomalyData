<script type='text/javascript'>
    let firstName = "<%= firstName %>";
    let lastName = "<%= lastName %>";
    let username = "<%= user.username %>";
    // console.log(username);
    let UserRole = "<%= user.userrole %>";
    let queryStr;
    let logInTime;
    let logOutTime;
    let logInLength;
    let seconds;
    let minutes;
    let hours;
    let buttonIn = document.getElementById('timeIn');
    let buttonOut = document.getElementById('timeOut');
    let displayHour;
    let displayMinute;
    let displaySecond;
    let ID = '<%= ID %>';
    console.log('<%= selectedRow %>');
    // let adminButton = document.getElementById('edit');
    // let addButton = document.getElementById('add');
    // let removeButton = document.getElementById('remove');
    document.getElementById("PK").value = '<%= ID %>';
    document.getElementById("name").value = '<%= selectedRow[0] %>';
    document.getElementById("continent").value = '<%= selectedRow[1] %>';
    document.getElementById("city").value = '<%= selectedRow[2] %>';
    document.getElementById("state").value = '<%= selectedRow[3] %>';
    document.getElementById("country").value = '<%= selectedRow[4] %>';
    document.getElementById("lat").value = '<%= selectedRow[5] %>';
    document.getElementById("long").value = '<%= selectedRow[6] %>';
    document.getElementById("altitude").value = '<%= selectedRow[7] %>';
    document.getElementById("date").value = '<%= selectedRow[8] %>'.replace(" ", "T");
    document.getElementById("status").checked = ('<%= selectedRow[9] %>' === "Active")
    document.getElementById("desc").value = '<%= selectedRow[10] %>';
    document.getElementById("id").value = '<%= selectedRow[11] %>';

    $(document).ready(function() {

        $(function () {

            flatpickr(".date", {
                dateFormat: "Y-m-d",
                time_24hr: true
            });

            if (UserRole === "Regular") {
                queryStr = "Current_Status=Pending&UID=" + username;
            } else {
                queryStr = "Current_Status=Pending";
                // adminButton.disabled = false;
            }
            //console.log(queryStr);
            //queryAndDisplay(queryStr);

            //the console below refers to the above as querystr
            // just for the Pending table
            //By changing this we allow the initial table to only show pending records
            //We change to UID b/c of column name in Layer_Request form table

        });

        $.ajax({
            url: 'display',
            method: 'get',
            dataType: "json",
            success: function (results) {
                displayHour = Math.trunc(results/60);
                displayMinute = Math.trunc(results - (displayHour*60));
                displaySecond = Math.trunc((results - ((displayHour * 60) + displayMinute)) * 60);
                let display = "Time Still Needed: " + displayHour + ":" + displayMinute + ":" + displaySecond;
                document.getElementById('Left').innerHTML = display;
            }})

        $.ajax({
            url: 'displayTotal',
            method: 'get',
            dataType: "json",
            success: function (results) {
                displayHour = Math.trunc(results / 60);
                displayMinute = Math.trunc(results - (displayHour * 60));
                displaySecond = Math.trunc((results - ((displayHour * 60) + displayMinute)) * 60);
                let display = " Total Time Required: " + displayHour + ":" + displayMinute + ":" + displaySecond;
                document.getElementById('total').innerHTML = display;
            }
        })
    });

    function dropDown() {
        //console.log(UserRole);
        if (UserRole === "Admin") {
            document.getElementById("userMenuAdmin").classList.toggle("show");
        } else if (UserRole === "Regular") {
            document.getElementById("userMenuRegular").classList.toggle("show");
        }
    }
    window.onclick = function(event) {
        if (!event.target.matches('.dropbutton')) {
            let dropdowns = document.getElementsByClassName("dropdown-content");
            for (let i = 0; i < dropdowns.length; i++) {
                let openDropdown = dropdowns[i];
                if (openDropdown.classList.contains('show')) {
                    openDropdown.classList.remove('show');
                }
            }
        }
    }

    function onFunction() {
        alert ("You are now online.");
    }

    function offFunction() {
        alert ("You are offline. Some functionality may be unavailable.");
    }


    var onSubmitButton = function() {
        var PK = document.getElementById("PK").value,
            name = document.getElementById("name").value,
            continent = document.getElementById("continent").value,
            city = document.getElementById("city").value,
            state = document.getElementById("state").value,
            country = document.getElementById("country").value,
            latitude = document.getElementById("lat").value,
            longitude = document.getElementById("long").value,
            altitude = document.getElementById("altitude").value,
            status = document.getElementById("status").checked,
            date = document.getElementById("date").value.replace("T", " "),
            description = document.getElementById("desc").value,
            ID = document.getElementById("id").value;

        console.log(date);

        if (status) {
            status = "Active";
        } else {
            status = "Inactive";
        }
        console.log(status);

        $.ajax({
            url: '/defg2',
            method: 'get',
            data: {
                PK: PK,
                name: name,
                continent: continent,
                city: city,
                state: state,
                country: country,
                latitude: latitude,
                longitude: longitude,
                altitude: altitude,
                status: "Active",
                date: date,
                description: description,
                ID: ID
            },
            success: function () {
                window.location.href = '/stationData';
            }
        })
    };

    document.getElementById("submit").addEventListener("click", onSubmitButton)

</script>
